<% include ../partials/userNav %>

<!--DASHBOARD SECTION-->
<header id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fa fa-gear"></i> Dashboard</h1>
      </div>
    </div>
  </div>
</header>

<% include ../partials/alerts %>
<!-- ACTIONS -->
<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <a href="/books/all/all/1" class="btn btn-primary btn-block">
          <i class="fa fa-plus"></i> Issue Book
        </a>
      </div>


      <div class="col-md-4">
        <a href="/books/return-renew" class="btn btn-info btn-block">
          <i class="fa fa-retweet"></i> Renew/Return Book
        </a>
      </div>
      
      
       <div class="col-md-4">
